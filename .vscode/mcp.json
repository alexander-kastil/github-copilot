{
	"servers": {
		"playwright": {
			"command": "npx",
			"args": [
				"@playwright/mcp@latest",
				"--vision"
			],
			"type": "stdio"
		},
		"azure-devops": {
			"command": "npx",
			"args": [
				"-y",
				"@azure-devops/mcp",
				"${input:azure_devops_org}"
			],
			"type": "stdio"
		},
		"azure-deploy": {
			"command": "npx",
			"args": [
				"-y",
				"@azure/mcp@latest",
				"server",
				"start"
			],
			"type": "stdio"
		},
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/"
		},
		"microsoft-learn": {
			"type": "http",
			"url": "https://learn.microsoft.com/api/mcp"
		},
		"figma": {
			"url": "https://mcp.figma.com/mcp",
			"type": "http"
		},
		"ssh-mcp": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"ssh-mcp",
				"--",
				"--host=${input:SSH_HOST}",
				"--port=22",
				"--user=${input:SSH_USER}",
				"--password=${input:SSH_PASSWORD}",
				"--sudoPassword=${input:SSH_PASSWORD}",
				"--timeout=120000",
				"--maxChars=none"
			]
		},
		"workiq": {
			"command": "npx",
			"args": [
				"-y",
				"@microsoft/workiq",
				"mcp"
			]
		},
		"debug-mcp": {
			"type": "sse",
			"url": "http://localhost:3001/sse"
		},
		"chrome-devtools-mcp": {
			"command": "npx",
			"args": [
				"-y",
				"chrome-devtools-mcp@latest"
			],
			"type": "stdio"
		}
	},
	"inputs": [
		{
			"type": "promptString",
			"id": "azure_devops_org",
			"description": "Azure DevOps organization name (e.g., contoso)",
			"password": false
		},
		{
			"id": "SSH_HOST",
			"type": "promptString",
			"description": "SSH host/IP of the Raspberry Pi",
			"default": "192.168.0.143"
		},
		{
			"id": "SSH_USER",
			"type": "promptString",
			"description": "SSH username",
			"default": "alex"
		},
		{
			"id": "SSH_PASSWORD",
			"type": "promptString",
			"description": "SSH password (used for sudo as well)",
			"password": true
		}
	]
}